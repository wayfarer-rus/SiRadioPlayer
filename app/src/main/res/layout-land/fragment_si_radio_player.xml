<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".SiRadioPlayer$PlaceholderFragment"
    android:background="@drawable/backgroung">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:layout_weight="0.94"
            android:weightSum="1">

            <ImageView
                android:layout_width="400px"
                android:layout_height="400px"
                android:id="@+id/djImage"
                android:layout_gravity="center_vertical|top"
                android:scaleType="fitXY"
                android:src="@drawable/siradio_favicon_large" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|top"
                android:layout_weight="0.94"
                android:weightSum="1"
                android:paddingTop="10px"
                android:paddingLeft="10px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/greeting"
                    android:id="@+id/onAir"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="13pt"
                    android:textStyle="bold"
                    android:fontFamily="Oswald, Tahoma, Arial, sans-serif" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/nowPlaying"
                    android:id="@+id/nowPlaying"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12pt"
                    android:textColor="@android:color/black"
                    android:visibility="invisible"
                    android:paddingTop="6px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/track"
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="6px"
                    android:visibility="invisible"
                    android:textSize="11pt"
                    android:textColor="#fff"
                    android:text="########" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.14"
                    android:paddingTop="6px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/by"
                        android:id="@+id/by"
                        android:paddingRight="6px"
                        android:visibility="invisible"
                        android:textColor="@android:color/black"
                        android:textSize="11pt" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="########"
                        android:id="@+id/song"
                        android:visibility="invisible"
                        android:textColor="#fff"
                        android:textSize="11pt" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stopButton"
            android:src="@drawable/stop_button"
            android:layout_gravity="center_horizontal|bottom"
            android:alpha="1"
            android:visibility="gone"
            android:onClick="stopRadioPlayback"
            android:background="#00000000" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startButton"
            android:src="@drawable/play_button"
            android:layout_gravity="center_horizontal|bottom"
            android:alpha="1"
            android:visibility="visible"
            android:onClick="playRadio"
            android:background="#00000000" />
    </LinearLayout>
</RelativeLayout>
